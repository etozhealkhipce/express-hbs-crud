<section class="section">
  <h1 class="title">Section</h1>
  <h2 class="subtitle">
    A simple container to divide your page into <strong>sections</strong>, like the one you're
    currently reading.
  </h2>

  <form method="POST" action="/add">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input class="input" name="title" type="text" placeholder="Enter book title" />
        <!-- <p class="help is-danger">Title required</p> -->
      </div>
    </div>

    <div class="field">
      <label class="label">Price</label>
      <div class="control">
        <input class="input" name="price" type="text" placeholder="Enter book price" />
        <!-- <p class="help is-danger">Price required</p> -->
      </div>
    </div>

    <div class="field">
      <label class="label">Image</label>
      <div class="file has-name">
        <label class="file-label">
          <input class="file-input" name="image" type="file" name="resume" accept="image/*" />
          <span class="file-cta">
            <span class="file-label"> Choose book image... </span>
          </span>
          <span class="file-name"> Screen Shot 2017-07-29 at 15.54.25.png </span>
        </label>
      </div>
      <!-- <p class="help is-danger">Image required</p> -->
    </div>

    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <textarea
          class="textarea"
          name="description"
          placeholder="Enter book description"
        ></textarea>
        <!-- <p class="help is-danger">Description required</p> -->
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Reload form</button>
      </div>
    </div>
  </form>
</section>
